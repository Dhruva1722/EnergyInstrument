<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="#D2DBE9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/dashboard"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/dashboard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="-25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/robotoflex"
            android:text="DASHBOARD"
            android:layout_toRightOf="@id/dashboard"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/productRangetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#4F5A649F"
            android:gravity="center"
            android:layout_below="@id/dashboard">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/robotoflex"
                android:text="PRODUCT RANGE"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/inductionmotor1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productRangetxt"
            android:background="@drawable/bgcard"
            android:padding="8dp"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/robotoflex"
                android:text="3Ã˜Induction Motor Speed Controlling VFD-Pannel"
                android:textSize="13sp"
                android:layout_marginLeft="7dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/synchronousmotor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/productRangetxt"
           android:layout_toRightOf="@id/inductionmotor1"
            android:background="@drawable/bgcard"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synchronous Motor # DC Shunt generator Pannel"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inductioncontrol1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/inductionmotor1"
            android:background="@drawable/bgcard"
            android:padding="8dp"
            android:layout_marginLeft="7dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Induction motor Control Pannel"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/inductioncontrol2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/synchronousmotor"
            android:layout_toRightOf="@id/inductionmotor1"
            android:background="@drawable/bgcard"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Induction motor Control Pannel"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dcshuntmachine"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/inductioncontrol1"
            android:background="@drawable/bgcard"
            android:padding="8dp"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC Shunt Machine with Mechanical Loading Pannel"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dcserisemachine"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/inductioncontrol2"
            android:layout_toRightOf="@id/dcshuntmachine"
            android:background="@drawable/bgcard"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC Series Machine with Mechanical"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dcshuntmotor1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcshuntmachine"
            android:background="@drawable/bgcard"
            android:padding="8dp"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC Shunt Motor # Alternator Experiment Pannel-1"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dcshuntmotor2"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcserisemachine"
            android:layout_toRightOf="@id/dcshuntmotor1"
            android:background="@drawable/bgcard"
            android:padding="8dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC Shunt Motor # Alternator Experiment Pannel-2"
                android:fontFamily="@font/robotoflex"
                android:textSize="13sp"
                android:gravity="center"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/transformertrainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dcshuntmotor2"
            android:background="@drawable/bg"
            android:layout_marginLeft="7dp"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoflex"
                android:textAlignment="center"
                android:text="Transformer Trainer"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>



    </RelativeLayout>

    </ScrollView>
</LinearLayout>